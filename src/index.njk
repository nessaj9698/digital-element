{% extends "layout.njk" %}
{% import "button.njk" as buttonComponent %}
{% import "article.njk" as articleComponent %}
{% import "clientsRows.njk" as clientComponent %}
{% import "button.njk" as buttonComponent %}

{% block content %}
    <section class="hero-section">
        <div class="gradient-overlay"></div> 
            <div class="container">
                <div class="hero-section__left-side"> 
                    <h1>New Automation Tool for Your Home</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Faucibus tristique  vulputate ultrices ut mauris tellus at. Posuere sollicitudin odio tellus elit.
                    </p>
                    {{ buttonComponent.button("button", "See Our Project") }}
                </div>
                <div class="hero-section__right-side">
                    <img src="/img/illustration.webp">
                </div>
                
        </div>

        </section>
        <section class="container service-section">
            <h2>What we do to help our client grow in digital era</h2>
            <div class="articles-wrapper">
                {% for item in data[0].services %}
                    {{ articleComponent.article(item) }}
                {% endfor %}
            </div>
        </section>

        <section class="client-section">
            <div class="container">
                <div class="client-section__titles">
                    <h2>Our Beloved Client</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
                </div>
                <div class="client-section__client-rows">
                     {% for client in data[1].clients %}
                        {{ clientComponent.clientsRows(client) }}
                    {% endfor %}
                    <a href="#" class="client-row__item client-row__show-more">
                       More client
                    </a>
                </div>
            </div>
        </section>
    
        
   
{% endblock %}